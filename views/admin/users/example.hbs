<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Exemplo Handlebars</title>
</head>
<body>
  <h1>{{titulo}}</h1>

  <ul>
    {{#each usuarios}}
      <li>{{nome}} - {{email}}</li>
    {{/each}}
  </ul>

  {{#if isAdmin}}
    <p>Usuário é um administrador</p>
  {{else}}
    <div class="alert alert-danger" role="alert">
      Você não tem permissão para acessar página!
    </div>
    {{!-- <p>Usuário não é um administrador</p> --}}
  {{/if}}

  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
  <script>
    // Exemplo de contexto de dados (substitua pelos seus dados reais)
    const context = {
      titulo: "Lista de Usuários",
      usuarios: [
        { nome: "João", email: "joao@example.com" },
        { nome: "Maria", email: "maria@example.com" },
        { nome: "Carlos", email: "carlos@example.com" }
      ],
      isAdmin: false
    };

    // Compilar o template Handlebars
    const source = document.getElementById("template").innerHTML;
    const template = Handlebars.compile(source);

    // Renderizar o template com os dados
    const html = template(context);

    // Inserir o HTML gerado na página
    document.getElementById("app").innerHTML = html;
  </script>
</body>
</html>
