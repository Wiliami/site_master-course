<body style="background-color: #37517e">
   <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card text-dark" style="border-radius: 1rem;">
                        <div class="card-body bg-light p-5 rounded text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <div class="section-title">
                                    <h2 class="mb-4 text-center mb-5">Login</h2>
                                </div>
                                <form action="/dashboard" method="POST" id="form" class="form-user">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control required" id="inputEmail" name="email"  placeholder="E-mail" oninput="emailValidate()">
                                        <label for="inputEmail">E-mail</label>
                                        <span class="span-required text-start">Digite um e-mail válido</span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control required" id="inputPassword" name="password" placeholder="Senha" oninput="passwordValidate()">
                                        <label for="inputPassword">Senha</label>
                                        <span class="span-required text-start">A senha deve ter no mínimo 8 caracteres</span>
                                    </div>
                                    <input class="btn btn-lg btn-success w-100" name="button-login" type="submit" value="Entrar">
                                </form>
                                <div class="mt-4">
                                    <div class="links">
                                        <p class="mb-0">Não tem uma conta? <a href="/cadastro">Criar uma</a></p>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <p><a href="/forgot-password" >Esqueceu a senha?</a></p>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
