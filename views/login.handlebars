<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        .span-required {
            font-size: 14px;
            margin: 3px 0 0 1px;
            color: #e63656;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row align-items-center">
            <div class="col-md-10 mx-auto col-lg-5">
                <div class="p-4 p-md-5 border rounded-3 bg-light">
                    <h3 class="mb-4 text-center">Login</h3>
                    <form action="" method="" id="form">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control required" id="inputEmail" name="email"  placeholder="E-mail" oninput="emailValidate()">
                            <label for="inputEmail">E-mail</label>
                            <span class="span-required">Digite um e-mail válido</span>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control required" id="inputPassword" name="password" placeholder="Senha" oninput="passwordValidate()">
                            <label for="inputPassword">Senha</label>
                            <span class="span-required ">A senha deve ter no mínimo 8 caracteres</span>
                        
                        </div>
                        <button class="w-100 btn btn-lg btn-success" type="submit">Entrar</button>
                    </form>
                  	<div class="mt-4">
                        <div class="d-flex justify-content-center links">
                            Não tem uma conta? <a href="/cadastro" class="ml-2">Criar uma</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="/forgot">Esqueceu a senha?</a>
                        </div>
				    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    const form = document.getElementById('form')
    const campos = document.querySelectorAll('.required')
    const span = document.querySelectorAll('.span-required')
    
    const emailRegex = /^(([^<>()[\]\.,;:\s@\"]+(\.[^<>()[\]\.,;:\s@\"]+)*)|(\".+\"))@(([^<>()[\]\.,;:\s@\"]+\.)+[^<>()[\]\.,;:\s@\"]{2,})$/i;


    form.addEventListener('submit', (event) => {
        event.preventDefault();
        emailValidate();
        passwordValidate();
    });


    function setError(index) {
        campos[index].style.border = '2px solid #e63656';
        span[index].style.display = 'block'; 
    }

    function removeError(index) {
        campos[index].style.border = '';
        span[index].style.display = 'none';
    }



    function emailValidate() {
        if(!emailRegex.test(campos[0].value)) {
            setError(0)
        } else {
            removeError(0)
        }
    }

    function passwordValidate() {
        if(campos[1].value.length < 8)  {
            setError(1)
        } else {
            removeError(1)
        }
    }
</script>
</html>





